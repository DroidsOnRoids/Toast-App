<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        android:state_enabled="true"
        android:state_focused="true">
        <layer-list>
            <item
                android:top="6dp">

                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorAccent"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_enabled="true">
        <layer-list>
            <item
                android:top="6dp">
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/paleGray"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_enabled="true"
        app:state_error="true">
        <layer-list>
            <item
                android:top="6dp">
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/darkRed"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
