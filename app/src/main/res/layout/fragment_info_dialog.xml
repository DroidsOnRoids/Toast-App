<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_round_rectangle"
    tools:context="pl.droidsonroids.toast.app.home.InfoDialogFragment">

    <ImageButton
        android:id="@+id/closeImageButton"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/ic_dialog_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/toastLogoImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/ic_logo_toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeImageButton"/>

    <ImageView
        android:id="@+id/hearthImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_dialog_favorite"
        app:layout_constraintEnd_toStartOf="@+id/byToastTeamText"
        app:layout_constraintStart_toEndOf="@+id/createdWithText"
        app:layout_constraintTop_toBottomOf="@+id/toastLogoImage"/>

    <TextView
        android:id="@+id/createdWithText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/roboto"
        android:text="@string/created_with"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/hearthImage"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastLogoImage"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/byToastTeamText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/roboto"
        android:text="@string/by_toast_team"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hearthImage"
        app:layout_constraintTop_toBottomOf="@+id/toastLogoImage"/>

    <TextView
        android:id="@+id/moreInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:text="@string/for_more_information_visit_our"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/fanpageLinkText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hearthImage"
        app:layout_constraintVertical_chainStyle="spread"/>

    <TextView
        android:id="@+id/fanpageLinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/toast_facebook_fanpage"
        android:textColor="@color/blueLink"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/appVersionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreInfoText"/>

    <TextView
        android:id="@+id/appVersionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:fontFamily="@font/roboto"
        android:text="@string/application_version"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fanpageLinkText"/>

</android.support.constraint.ConstraintLayout>
