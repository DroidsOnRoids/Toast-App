<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/paleGrayBackground">

    <ImageButton
        android:id="@+id/githubImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_github"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/githubDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/wwwImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_www"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wwwDivider"
        app:layout_constraintStart_toEndOf="@+id/githubDivider"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/twitterImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/twitterDivider"
        app:layout_constraintStart_toEndOf="@+id/wwwDivider"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/emailImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/twitterDivider"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/githubDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wwwImage"
        app:layout_constraintStart_toEndOf="@+id/githubImage"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/wwwDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/twitterImage"
        app:layout_constraintStart_toEndOf="@+id/wwwImage"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/twitterDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/emailImage"
        app:layout_constraintStart_toEndOf="@+id/twitterImage"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>