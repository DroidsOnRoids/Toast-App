<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Roboto" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="EventHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#213d55</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="EventSubHeaderStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blueGrey</item>
        <item name="android:letterSpacing">0.07</item>
    </style>


    <style name="FacebookAttend">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#20c685</item>
        <item name="android:letterSpacing">0.07</item>
    </style>
</resources>
