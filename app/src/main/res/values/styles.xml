<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance.Roboto" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="EventHeaderStyle">
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="EventSubHeaderStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/blueGray</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="FacebookAttend">
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">@dimen/text_size_extra_tiny</item>
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SmallDateStyle">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blueGray</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="LectureTitleStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAppearance">@style/TextAppearance.Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:letterSpacing">0.07</item>
    </style>
</resources>
